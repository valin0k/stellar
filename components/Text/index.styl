.text
  font-weight 200
  color #636363
  line-height 3u

  &-white
    color #fff

  &-subtitle
    font-size 3u
    line-height 4u

    +tablet()
      font-size 4u
      line-height 5u

  &-title
    font-size 5u
    line-height 6u

    +tablet()
      font-size 6u
      line-height 7u

  &-center
    text-align center

  &-bold
    font-weight 700

  &-justify
    text-align justify

  &-responsive
    +tablet()
      font-size 2.5u
      line-height 4u

  &-columns
    +desktop()
      column-count 2
