_whiteColor = #fff

.background
  background #615195
  +web()
    background-image linear-gradient(45deg, #e37682 15%, #5f4d93 85%)

.root
  width 100%
  padding 0 2u

  +wide()
    padding 0

.container
  align-items center
  max-width 150u
  border-radius 2u
  overflow hidden

  +wide()
    margin 0 auto

.content
  background _whiteColor
  width 100%
  border-radius 1u

.menu
  display none
  +tablet()
    display flex
