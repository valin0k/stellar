_whiteColor = #fff

.background
  background #615195
  +web()
    background-image linear-gradient(45deg, #e37682 15%, #5f4d93 85%)

.root
  width 100%
  overflow hidden

.container
  align-items center
  margin 0 4u
  max-width 150u
  margin 0 auto
  border-radius 2u
  overflow hidden

.content
  background _whiteColor
  width 100%
  border-radius 1u

.menu
  +to($tablet)
    display none
