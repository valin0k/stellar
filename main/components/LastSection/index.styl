_gray = #dddddd
_darkGray = #636363

.root
  align-items center

.buttons
  margin-top 4u
  width 100%

  +from($tablet)
    flex-direction row
    justify-content center

.text
  font-size font(l)
  text-align center
  line-height 25px
  color _darkGray
  margin-bottom gutter(xl)

.blueButton
  background #8cc9f0
  padding 1.5u 3u
  border-radius 0.5u
  border 1px solid #e3e3e3
  margin-bottom 2u
  text-align center

  +from($tablet)
    margin 0 2u 0 0


.buttonText
  color #ffffff
  font-size 2u
  font-weight 200
