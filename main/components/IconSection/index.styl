_gray = #dddddd
_darkGray = #636363

.root
  align-items center

.titleWrapper
  align-items center

.content
  align-items center

  +tablet()
    flex-direction row
    flex-wrap wrap
    justify-content center
    margin-top 4u

.section
  align-items center
  margin-bottom gutter(l)

  +tablet()
    max-width 38u
    //margin-bottom 5u
    margin 1u

.iconBorderWrapper
  padding 1u
  border 1px solid _gray
  border-radius 12u
  margin-bottom 3u

.iconWrapper
  border-radius 12u
  border 1px solid _gray
  padding 4u

.itemTitle
  text-align center
  font-weight 200
  font-size 2.5u
  margin-bottom gutter(l)
  color _darkGray

.image
  width 7.5u
  height 7.5u
