_gray = #dddddd
_darkGray = #636363

.root
  align-items center

.titleWrapper
  align-items center

.content
  align-items center
  margin-top 2u

  +tablet()
    flex-direction row
    flex-wrap wrap
    justify-content center
    margin-top 4u

.section
  align-items center
  margin-top 3u

  &-first
    margin-top 0

  +tablet()
    max-width 38u
    margin 1u

    &-first
      margin 0 1u

    &-last
      margin 3u 1u 0 1u

  +desktop()
    margin-top 0
    max-width 32u

    &-last
      margin 0 0 0 1u

  +wide()
    &-last
      margin-top 0

.iconBorderWrapper
  padding 1u
  border 1px solid _gray
  border-radius 12u

.iconWrapper
  border-radius 12u
  border 1px solid _gray
  padding 4u

.itemTitle
  text-align center
  font-weight 200
  font-size 2.5u
  color _darkGray
  margin-top 3u

.itemText
  margin-top 2.5u

.image
  width 7u
  height 7u

  +tablet()
    width 13u
    height 13u

.button
  margin-top 3u
