_gray = #dddddd

.root
  align-items center

  +desktop()
    flex-direction row

.content
  align-items center
  margin 4u 0 0 0

  +desktop()
    order 0
    align-items flex-start
    max-width 60%

.imageWrapper
  border-radius 13u
  padding 0.5u
  border 1px solid _gray
  width 100%
  justify-content center

  +tablet()
    border-radius 25u
  +desktop()
    order 1
    width 35u
    height 35u
    align-items center

.imageContainer
  +desktop()
    order 1
    width 40%
    align-items center

.image
  width 24u
  height 24u
  border-radius 12u

  +tablet()
    width 32u
    height 32u
    border-radius 19u

.textWrapper
  margin-top 2u
  text-align center

  +desktop()
    text-align left

.button
  margin-top 3u
