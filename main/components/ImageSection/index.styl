_gray = #dddddd

.root
  align-items center

  +desktop()
    flex-direction row
    justify-content space-between

.content
  align-items center
  margin 4u 0 0 0

  +desktop()
    order 0
    align-items flex-start
    max-width 60%

.imageWrapper
  border-radius 13u
  padding 0.5u
  border 1px solid _gray
  justify-content center

  +tablet()
    border-radius 25u
  +desktop()
    order 1
    width 35u
    height 35u
    align-items center
  +wide()
    width 39u
    height 39u

.image
  width 24u
  height 24u
  border-radius 20u

  +tablet()
    width 32u
    height 32u

  +wide()
    width 37u
    height 37u

.textWrapper
  margin-top 2u
  text-align center

  +desktop()
    text-align left
    margin-top 4u

.button
  margin-top 3u

  +desktop()
    margin-top 4u
